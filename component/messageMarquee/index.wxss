/* component/messageMarquee/index.wxss */
.meesage-marquee{
  width:100%;
  height:69rpx;
  background:rgba(242,242,242,1);
  position: relative;
  margin-top: 10px;
}
.marquee-logo{
  width: 146rpx;
  height: 31rpx;
  position: absolute;
  top: 18rpx;
  left: 0rpx;
  z-index: 500;
  background:rgba(242,242,242,1);
  padding-left: 27rpx;
}
.marquee-text{
  height: 30rpx;
  font-size:24rpx;
  font-family:PingFang;
  font-weight:500;
  color:rgba(51,51,51,1);
  overflow: hidden;
  position: absolute;
  top:16rpx;
  left: 180rpx; 
  transition-duration: 2s;  
}
.marquee-right-cover{
  width: 50rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  background:rgba(242,242,242,1);
  z-index: 400;
}
.marquee-dir{
  width:10rpx;
  height:19rpx;
  position: absolute;
  right: 39rpx;
  top: 25rpx;
  z-index: 500;
}